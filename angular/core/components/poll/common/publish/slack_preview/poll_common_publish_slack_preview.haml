.poll-common-publish-slack-preview.lmo-flex{layout: "row"}
  .poll-common-publish-slack-preview__avatar
    %img{ng-src: "https://s3-us-west-2.amazonaws.com/slack-files2/bot_icons/2017-03-29/161925077303_48.png"}
  .poll-common-publish-slack-preview__content
    .poll-common-publish-slack-preview__title
      %strong.poll-common-publish-slack-preview__loomio-bot> Loomio Bot
      %span.poll-common-publish-slack-preview__app> APP
      %span.poll-common-publish-slack-preview__title-timestamp> {{ timestamp() }}
    .poll-common-publish-slack-preview__published
    .poll-common-publish-slack-preview__message {{ message }}
    .poll-common-publish-slack-preview__attachment.lmo-flex{layout: "row"}
      .poll-common-publish-slack-preview__bar
      .poll-common-publish-slack-preview__poll
        .poll-common-publish-slack-preview__author {{ userName }}
        .poll-common-publish-slack-preview__poll-title {{ poll.title }}
        .poll-common-publish-slack-preview__poll-details{ng-if: "poll.details"} {{ poll.details | truncate }}
        .poll-common-publish-slack-preview__view-it{translate: "poll_common_publish_slack_preview.view_it_on_loomio", translate-values: "{site_name: siteName}"}
        .poll-common-publish-slack-preview__timestamp{translate: "poll_common_publish_slack_preview.timestamp", translate-value-timestamp: "{{timestamp()}}"}
        .poll-common-publish-slack-preview__options.lmo-flex{layout: "row"}
          .poll-common-publish-slack-preview__option{ng-repeat: "option in poll.pollOptions()"}
            {{ option.displayName }}
